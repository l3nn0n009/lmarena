{
    "name": "grove-ai",
    "displayName": "Grove AI",
    "description": "AI coding assistant powered by LMArena - write, read, edit files and run commands",
    "version": "1.0.0",
    "publisher": "grove",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Machine Learning"
    ],
    "activationEvents": [],
    "main": "./src/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "grove-sidebar",
                    "title": "Grove AI",
                    "icon": "media/grove-icon.svg"
                }
            ]
        },
        "views": {
            "grove-sidebar": [
                {
                    "type": "webview",
                    "id": "grove.chatView",
                    "name": "Grove Agent"
                }
            ]
        },
        "commands": [
            {
                "command": "grove.newChat",
                "title": "Grove: New Chat"
            },
            {
                "command": "grove.selectModel",
                "title": "Grove: Select Model"
            },
            {
                "command": "grove.toggleMode",
                "title": "Grove: Toggle Planning/Execution Mode"
            }
        ],
        "configuration": {
            "title": "Grove AI",
            "properties": {
                "grove.serverUrl": {
                    "type": "string",
                    "default": "http://localhost:3000",
                    "description": "URL of the Grove server"
                },
                "grove.defaultModel": {
                    "type": "string",
                    "default": "",
                    "description": "Default AI model to use"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "compile": "node -e \"console.log('No compile needed')\"",
        "watch": "node -e \"console.log('No watch needed')\""
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "eslint": "^8.56.0"
    },
    "dependencies": {
        "socket.io-client": "^4.7.4"
    }
}